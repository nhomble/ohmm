}

function ohmm_shell_cmd {
	LINE_CMD=""
	for s in "${CMD[@]}"; do
		add=$(echo $s | sed -e "s/\s/\\\ /g" | sed -e "s/(/\\\(/g" | sed -e "s/)/\\\)/g" )
		LINE_CMD="$LINE_CMD $add"
	done
	eval $LINE_CMD
	return
}

# TODO fix
function ohmm_shuffle {
	if [ "${CMD[1]}" = "on" ]; then
		IS_SHUFFLE="true"
	elif [ "${CMD[1]}" = "off" ]; then
		IS_SHUFFLE="false"
	else
		echo "bad argument: ${CMD[1]}"
		return
	fi
	return
}

function ohmm_shuffle_toggle {
	if [ $IS_SHUFFLE = "true" ]; then
		IS_SHUFFLE="false"
		echo "shuffle off"
	else
		IS_SHUFFLE="true"
		echo "shuffle on"
	fi
	return
}

function ohmm_volume {
	if [ $1 -gt 0 ]; then
#		bound the upper limit of the volume value
		if [ $VOLUME -lt 100 ]; then
			VOLUME=$(($VOLUME+$V_INC))
		fi
		echo "set volume $VOLUME 0" > $FIFO
		echo "VOLUME = $VOLUME%"

	else
#		bound the lower limit of the volume value
		if [ $VOLUME -gt 0 ]; then
			VOLUME=$(($VOLUME-$V_INC))
		fi
		echo "set volume $VOLUME 0" > $FIFO
		echo "VOLUME = $VOLUME%"

	fi
	return
}
